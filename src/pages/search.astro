---
import MainLayout from "../layouts/MainLayout.astro";
import ProductList from "../components/ProductList.astro";
---

<MainLayout>
  <div class="flex flex-col gap-12 lg:gap-24 mt-16 lg:mt-24">
    <section class="outer">
      <div class="inner">
        <h1 class="text-3xl lg:text-5xl">Søk</h1>
        <div class="inner--grid mt-6 lg:mt-10">
          <div class="col-start-1 col-span-12 lg:col-span-7">
            <p>10 treff på "Stedsnavn"</p>
            <p class="mt-10">Søkeresultat for:</p>
            <div class="flex gap-4 mt-4">
              <a class="button font-medium lg:px-20 button--active" href="/search">Produkter</a>
              <a class="button font-medium lg:px-20" href="/search-article">Artikler</a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <ProductList />
  </div>
</MainLayout>
