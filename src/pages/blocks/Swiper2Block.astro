---
import "swiper/css";
import "swiper/css/navigation";
---

<script>
  import Swiper, { Navigation } from "swiper";

  new Swiper(".swiper-2", {
    slidesPerView: 1,
    breakpoints: {
      320: {
        spaceBetween: 20,
      },
      1024: {
        spaceBetween: 30,
      },
    },
    pagination: {
      el: ".swiper-2-pagination",
    },
    navigation: {
      prevEl: ".swiper-2-button-prev",
      nextEl: ".swiper-2-button-next",
    },
    modules: [Navigation],
  });
</script>

<section class="outer">
  <div class="inner relative">
    <div class="swiper swiper-2">
      <div class="swiper-wrapper">
        {
          [...Array(5)].map(() => (
            <div class="swiper-slide">
              <div class="relative pb-10">
                <img src="/stressless.jpg" class="aspect-video object-cover object-center w-full no-visual-search" alt="" />
                <div class="inner--grid bottom-0 z-20 absolute w-full">
                  <div class="col-start-2 col-end-9 lg:col-end-6">
                    <div class="inline-block bg-gold py-4 px-12">Bildetekst kan skrives her</div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <div class="h-12 flex justify-end items-center">
        <div class="swiper-2-button-prev px-2" role="button">
          <svg width="9" height="15" fill="none" xmlns="http://www.w3.org/2000/svg"><g clip-path="url(#a)"><path d="m7.08 0 1.27 1.2-5.94 6.26 5.94 6.19-1.27 1.21L0 7.47 7.08 0Z" fill="#000"></path></g><defs><clipPath id="a"><path fill="#fff" transform="rotate(-180 4.175 7.43)" d="M0 0h8.35v14.86H0z"></path></clipPath></defs></svg>
        </div>
        <div class="swiper-2-button-next px-2" role="button">
          <svg width="9" height="15" fill="none" xmlns="http://www.w3.org/2000/svg"><g clip-path="url(#a)"><path d="M1.27 14.86 0 13.66 5.94 7.4 0 1.21 1.27 0l7.08 7.39-7.08 7.47Z" fill="#000"></path></g><defs><clipPath id="a"><path fill="#fff" d="M0 0h8.35v14.86H0z"></path></clipPath></defs></svg>
        </div>
      </div>
    </div>
  </div>
</section>